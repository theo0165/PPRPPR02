<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="MVCLabb.Controller">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <Canvas fx:id="_canvas" height="200.0" width="200.0"  />
         </center>
         <left>
             <VBox>
                <ColorPicker fx:id="_colorPicker" prefHeight="38.0" prefWidth="38.0" />
                <TextField text="18" fx:id="_sizePicker" prefHeight="30" prefWidth="30" />
                <Button mnemonicParsing="false" onAction="#changeSize" text="Set size" />
             </VBox>
         </left>
         <bottom>
            <Button mnemonicParsing="false" onAction="#onExitClick" text="Exit" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
